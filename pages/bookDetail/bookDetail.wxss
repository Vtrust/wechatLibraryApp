/**sortDetail.wxss**/

page {
  background-color: #f8f8f8;
  font-family: '微软雅黑';
}

/*主体框架*/

.bookDetail {
  margin-top: 20rpx;
  width: 720rpx;
  height: 100%;
  background-color: #fff;
}

/*书籍栏*/

.oneBook {
  display: flex;
  height: 350rpx;
}

.book {
  width: 210rpx;
  height: 300rpx;
  margin: 30rpx;
}

.book image {
  width: 210rpx;
}

.bookSummary {
  width: 520rpx;
  height: 200rpx;
  margin-top: 30rpx;
}

.bookMessages {
  height: 260rpx;
  width: 400rpx;
}

.bookAuthor {
  height: 50rpx;
  line-height: 50rpx;
  width: 400rpx;
  text-align: left;
  font-size: 24rpx;
}

.bookPress {
  height: 50rpx;
  line-height: 50rpx;
  width: 400rpx;
  text-align: left;
  font-size: 24rpx;
}

.bookSort {
  height: 50rpx;
  line-height: 50rpx;
  width: 400rpx;
  text-align: left;
  font-size: 24rpx;
}

.bookStatus {
  height: 40rpx;
  display: flex;
}

.bookStatus view {
  color: #8f8f8f;
  width: 120rpx;
  font-size: 22rpx;
  text-align: left;
}

.bookAbstract {
  width: 600rpx;
  font-size: 24rpx;
  color: #8f8f8f;
  margin: 0 0 30rpx 30rpx;
}

/*相关书籍*/

/*borrowBook*/

.relatedBooks {
  width: 720rpx;
  height: 300rpx;
  background-color: #fff;
  margin-top: 20rpx;
  overflow: hidden;
}

.showTitle {
  width: 100%;
  height: 30rpx;
  font-size: 30rpx;
  margin: 5rpx;
}

.showBox {
  width: 685rpx;
  margin: 0 20rpx 0 15rpx;
  overflow: hidden;
}

.showBook {
  height: 260rpx;
  width: 100%;
  white-space: nowrap;
}

.relatedBook {
  display: inline-block;
  height: 240rpx;
  width: 140rpx;
  margin: 10rpx;
}

.relatedBook image {
  width: 140rpx;
}

.relatedBook view {
  width: 140rpx;
  font-size: 24rpx;
  text-align: center;
  overflow: hidden;
}

/*操作栏*/

.bookAction {
  margin-top: 20rpx;
  width: 720rpx;
}

/*二维码*/

/* pages/main/index.wxss */

.container-box {
  background-color: #fff;
  margin-top: 20rpx;
  width: 720rpx;
}

.img-box {
  padding: 16rpx;
  position: relative;
}

.input-row {
  margin: 30rpx auto;
  border-bottom: 1rpx solid #e5e5e5;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  height: 88rpx;
  padding: 0 32rpx;
  background-color: #fff;
  font-size: 34rpx;
  color: #000;
}

.input-row input {
  margin-left: 100rpx;
  flex: 1;
}

.mybtn {
  width: 686rpx;
  margin: 60rpx auto;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 3;
  width: 100%;
  height: 100%;
  opacity: 0;
}
