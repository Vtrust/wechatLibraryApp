/**sortDetail.wxss**/

page {
  background-color: #f8f8f8;
  font-family: '微软雅黑';
}

/*主体框架*/

.bookDetail {
  margin-top: 20rpx;
  width: 720rpx;
  height: 100%;
  background-color: #fff;
}

/*书籍栏*/

.oneBook {
  display: flex;
  height: 350rpx;
}

.book {
  width: 210rpx;
  height: 300rpx;
  margin: 30rpx;
}

.book image {
  width: 210rpx;
  height: 300rpx;
}

.bookSummary {
  width: 520rpx;
  height: 200rpx;
  margin-top: 30rpx;
}

.bookMessages {
  height: 260rpx;
  width: 400rpx;
}

.bookAuthor {
  height: 50rpx;
  line-height: 50rpx;
  width: 400rpx;
  text-align: left;
  font-size: 24rpx;
}

.bookPress {
  height: 50rpx;
  line-height: 50rpx;
  width: 400rpx;
  text-align: left;
  font-size: 24rpx;
}

.bookSort {
  height: 50rpx;
  line-height: 50rpx;
  width: 400rpx;
  text-align: left;
  font-size: 24rpx;
}

.bookStatus {
  height: 40rpx;
  display: flex;
}

.bookStatus view {
  color: #8f8f8f;
  width: 120rpx;
  font-size: 22rpx;
  text-align: left;
}

.bookAbstract {
  width: 600rpx;
  font-size: 24rpx;
  color: #8f8f8f;
  margin: 0 0 30rpx 30rpx;
}

/*相关书籍*/

/*borrowBook*/

.relatedBooks {
  width: 720rpx;
  height: 300rpx;
  background-color: #fff;
  margin-top: 20rpx;
  overflow: hidden;
}

.showTitle {
  width: 100%;
  height: 30rpx;
  font-size: 30rpx;
  margin: 5rpx;
}

.showBox {
  width: 685rpx;
  margin: 0 20rpx 0 15rpx;
  overflow: hidden;
}

.showBook {
  height: 260rpx;
  width: 100%;
  white-space: nowrap;
}

.relatedBook {
  display: inline-block;
  height: 240rpx;
  width: 140rpx;
  margin: 10rpx;
}

.relatedBook image {
  width: 140rpx;
  height: 200rpx;
}

.relatedBook view {
  width: 140rpx;
  font-size: 24rpx;
  text-align: center;
  overflow: hidden;
}

/*操作栏*/

.bookAction {
  margin-top: 20rpx;
  width: 720rpx;
}
