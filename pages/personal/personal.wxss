/*userMessage*/

.userIcon {
  margin: 0;
  width: 100rpx;
  height: 100rpx;
  padding: 25rpx;
}

.userIcon image {
  margin: 0;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.userID {
  width: 200rpx;
  height: 150rpx;
  font-size: 30rpx;
  text-align: left;
  line-height: 150rpx;
}

.userAir {
  width: 200rpx;
  height: 150rpx;
}

.userRemind {
  width: 150rpx;
  height: 150rpx;
}

.userRemind Image {
  width: 50rpx;
  height: 50rpx;
  margin: 35rpx 50rpx 0 50rpx;
}
.userRemind view{
  text-align: center;
