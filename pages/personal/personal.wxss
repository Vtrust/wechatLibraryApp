}

/*borrowBook*/

.showTitle {
  width: 100%;
  height: 30rpx;
  font-size: 30rpx;
  margin: 5rpx;
}

.showBox {
  width: 685rpx;
  margin: 0 20rpx 0 15rpx;
  overflow: hidden;
}

.showBook {
  height: 260rpx;
  width: 100%;
  white-space: nowrap;
}

.book {
  display: inline-block;
  height: 240rpx;
  width: 140rpx;
  margin: 10rpx;
}

.book image {
  width: 140rpx;
  /*宽度一定，高度自适应*/
}

.book view {
  width: 140rpx;
  font-size: 24rpx;
  text-align: center;
  overflow: hidden;
}
