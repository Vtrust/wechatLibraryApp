/**personal.wxss**/

page {
  background-color: #f8f8f8;
  font-family: '微软雅黑';
}

/*主体框架*/

.search {
  margin: 20rpx 10rpx 10rpx 10rpx;
  width: 720rpx;
  height: 80rpx;
  background-color: #fff;
  display: flex;
}

.booksBox {
  width: 720rpx;
  background-color: #fff;
}

/*搜索框*/

.search input {
  background-color: #f8f8f8;
  height: 50rpx;
  width: 500rpx;
  margin: 15rpx;
  border-radius: 25rpx;
  font-size: 30rpx;
  padding-left: 25rpx;
}

.scanCode {
  height: 80rpx;
  width: 100rpx;
}

.scanCode image {
  width: 50rpx;
  height: 50rpx;
  margin: 15rpx;
}

.searchTap {
  height: 80rpx;
  width: 100rpx;
}

.searchTap image {
  width: 50rpx;
  height: 50rpx;
  margin: 15rpx;
}

/*书籍栏来自sortDetail*/
.notFound{
  background-color: #f8f8f8;
  height: 700rpx;
  line-height: 700rpx;
  text-align: center;
}

.oneBook {
  display: flex;
  height: 220rpx;
  border-bottom: 2rpx solid #f8f8f8;
}

.book {
  height: 200rpx;
  width: 140rpx;
  margin: 10rpx;
}

.book image {
  width: 140rpx;
}

.bookSummary {
  width: 520rpx;
  height: 200rpx;
  margin: 10rpx;
}

.bookName {
  height: 50rpx;
  line-height: 50rpx;
  width: 520rpx;
  text-align: left;
  font-size: 30rpx;
  overflow: hidden;
}
.bookTitle{
  width: 400rpx;
  height: 60rpx;
  overflow: hidden;
  float: left;
}
.bookAuthor {
  color: #8f8f8f;
  font-size: 24rpx;
  margin-left: 20rpx;
}


.bookAbstract {
  height: 100rpx;
  width: 520rpx;
  overflow: hidden;
  font-size: 24rpx;
  color: #8f8f8f;
  margin: 5rpx;
}

.bookStatus {
  height: 40rpx;
  display: flex;
}

.bookStatus view {
  color: #8f8f8f;
  width: 120rpx;
  font-size: 22rpx;
  text-align: left;
}

/*历史搜索框*/

.history {
  padding: 20rpx;
  width: 680rpx;
  background-color: #fff;
  border-bottom: 10rpx solid #f8f8f8
}

.history image{
  margin: 20rpx;
  width: 50rpx;
  height: 50rpx;
}

.history-item {
  color: #7f7f7f;
  height: 50rpx;
  border-radius: 30rpx;
  background-color: #f8f8f8;
  line-height: 50rpx;
  font-size: 26rpx;
  margin: 10rpx;
  padding: 10rpx;
  display: block;
  float: left;
}

.hide {
  display: none;
}
