/**personal.wxss**/

page {
  background-color: #f8f8f8;
  font-family: '微软雅黑';
}

/*主体框架*/

.search {
  margin: 20rpx 10rpx 10rpx 10rpx;
  width: 720rpx;
  height: 80rpx;
  background-color: #fff;
  display: flex;
}

.sortBox {
  width: 720rpx;
  background-color: #fff;
}

/*搜索框*/

.search input {
  background-color: #f8f8f8;
  height: 50rpx;
  width: 500rpx;
  margin: 15rpx;
  border-radius: 25rpx;
  font-size: 30rpx;
  padding-left: 25rpx;
}

.scanCode {
  height: 80rpx;
  width: 100rpx;
}

.scanCode image {
  width: 50rpx;
  height: 50rpx;
  margin: 15rpx;
}

.searchTap {
  height: 80rpx;
  width: 100rpx;
}

.searchTap image {
  width: 50rpx;
  height: 50rpx;
  margin: 15rpx;
}

/*标题栏*/

.sortTitle {
  width: 710rpx;
  height: 80rpx;
  background-color: #fff;
  padding-left: 10rpx;
  font-size: 40rpx;
  line-height: 80rpx;
  text-align: left;
}

/*分类栏*/

.sort {
  display: flex;
  height: 220rpx;
  border-bottom: 2rpx solid #f8f8f8;
}

.sortName {
  height: 220rpx;
  line-height: 220rpx;
  width: 200rpx;
  padding-left: 50rpx;
  text-align: left;
  font-size: 35rpx;
}

.bookNum {
  height: 220rpx;
  line-height: 220rpx;
  width: 200rpx;
  padding-left: 50rpx;
  text-align: right;
  color: #7f7f7f;
  font-size: 24rpx;
}

.book {
  height: 200rpx;
  width: 140rpx;
  margin: 10rpx;
}

.book image {
  width: 140rpx;
}

/*历史搜索框*/

.history {
  padding: 20rpx;
  width: 680rpx;
  background-color: #fff;
  border-bottom: 10rpx solid #f8f8f8
}

.history image{
  margin: 20rpx;
  width: 50rpx;
  height: 50rpx;
}

.history-item {
  color: #7f7f7f;
  height: 50rpx;
  border-radius: 30rpx;
  background-color: #f8f8f8;
  line-height: 50rpx;
  font-size: 26rpx;
  margin: 10rpx;
  padding: 10rpx;
  display: block;
  float: left;
}

.hide {
  display: none;
}
